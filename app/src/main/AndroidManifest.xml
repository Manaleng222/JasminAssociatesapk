<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Add Internet Permission -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JasminAssociates"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Login Activity (Entry Point) -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity (Navigation Controller) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Admin Activities -->
        <activity
            android:name=".ui.admin.AdminDashboardActivity"
            android:exported="false" />
        <activity
            android:name=".ui.admin.ManageUsersActivity"
            android:exported="false" />
        <activity
            android:name=".ui.admin.UserActivitiesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.admin.AdminSecurityShiftsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.admin.AddEditProjectActivity"
            android:exported="false" />
        <activity
            android:name=".ui.admin.AddEditEquipmentActivity"
            android:exported="false" />

        <!-- Project Manager Activities -->
        <activity
            android:name=".ui.projectmanager.ManageProjectsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.projectmanager.ProjectTasksActivity"
            android:exported="false" />
        <activity
            android:name=".ui.projectmanager.AddEditTaskActivity"
            android:exported="false" />
        <activity
            android:name=".ui.projectmanager.EquipmentRequestsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.projectmanager.CreateEquipmentRequestActivity"
            android:exported="false" />

        <!-- Security Activities -->
        <activity
            android:name=".ui.security.SecurityShiftsActivity"
            android:exported="false" />

        <!-- Other Activities -->
        <activity
            android:name=".EquipmentDetailActivity"
            android:exported="false" />

    </application>
</manifest>