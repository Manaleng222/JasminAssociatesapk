<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.admin.UserActivitiesActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/menuButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="â˜°"
            android:textSize="18sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="#007ACC" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="User Activities and Management"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <Button
            android:id="@+id/dashboardButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:backgroundTint="#007ACC"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <!-- View Toggle -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:columnWidth="0dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/activitiesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginEnd="5dp"
            android:text="ðŸ“Š Activities"
            android:backgroundTint="#6c757d"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/usersButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginStart="5dp"
            android:text="ðŸ‘¥ All Users"
            android:backgroundTint="#007ACC"
            android:textColor="@android:color/white" />

    </GridLayout>

    <!-- User Table Section -->
    <ScrollView
        android:id="@+id/userTableScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Table Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#2c3e50"
                android:padding="12dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="UserID"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="First Name"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Last Name"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Email"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Role"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Hourly Rate"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="13sp" />

            </LinearLayout>

            <!-- User Table Layout -->
            <TableLayout
                android:id="@+id/userTableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

    <!-- Activities Section -->
    <LinearLayout
        android:id="@+id/activitiesLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- User Selection -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="#f8f9fa">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select User:"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp" />

                <Spinner
                    android:id="@+id/userSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background"
                    android:minHeight="48dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Selected User Info -->
        <androidx.cardview.widget.CardView
            android:id="@+id/selectedUserLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:cardElevation="2dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="#e1f5fe">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SELECTED USER DETAILS:"
                    android:textStyle="bold"
                    android:textColor="#01579b"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp" />

                <!-- User Details -->
                <TextView
                    android:id="@+id/selectedUserNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:id="@+id/selectedUserRoleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Role: "
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:id="@+id/selectedUserEmailTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email: "
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:id="@+id/selectedUserStatusTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status: "
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp" />

                <!-- Additional User Details -->
                <TextView
                    android:id="@+id/userPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone: "
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:id="@+id/userRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rate: $0.00"
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- No Selection Message -->
        <TextView
            android:id="@+id/noSelectionMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please select a user to view details"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:layout_margin="10dp" />

        <!-- Activities Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Activities:"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activitiesCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(0 activities)"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Activities List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activitiesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- No Activities Message -->
        <TextView
            android:id="@+id/noActivitiesMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No activities found for selected user"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:layout_margin="20dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Action Buttons -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:columnWidth="0dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/refreshButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginEnd="5dp"
            android:text="ðŸ”„ Refresh"
            android:backgroundTint="#17a2b8"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/reportButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginStart="5dp"
            android:text="ðŸ“‹ Report"
            android:backgroundTint="#28a745"
            android:textColor="@android:color/white" />

    </GridLayout>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</LinearLayout>