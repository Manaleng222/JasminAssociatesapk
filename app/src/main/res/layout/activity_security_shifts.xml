<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.security.SecurityShiftsActivity">

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/dashboardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#6c757d"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/exportShiftsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Export Shifts"
            android:backgroundTint="#28a745"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <!-- Shifts List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp" />

    <!-- Summary -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cardBackgroundColor="#e9ecef">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/totalShifts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Shifts: 0"
                android:gravity="center" />

            <TextView
                android:id="@+id/completedShifts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Completed: 0"
                android:gravity="center" />

            <TextView
                android:id="@+id/totalHours"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Hours: 0"
                android:gravity="center" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>