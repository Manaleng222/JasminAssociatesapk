<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:cardElevation="2dp"
    android:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/personnelNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Security Personnel"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/projectTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Project"
            android:textSize="14sp"
            android:textColor="#666" />

        <TextView
            android:id="@+id/clockInTimeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clock In Time"
            android:textSize="12sp"
            android:textColor="#999" />

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="12sp"
            android:textColor="#999" />

    </LinearLayout>

</androidx.cardview.widget.CardView>