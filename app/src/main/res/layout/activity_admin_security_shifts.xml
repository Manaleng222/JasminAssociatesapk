<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    tools:context=".ui.admin.AdminSecurityShiftsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/dashboardButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#6c757d"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Security Shifts Management"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

        <!-- Add Shift Form Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:cardBackgroundColor="@android:color/black"
            android:cardElevation="4dp"
            android:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add New Shift"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp" />

                <!-- Validation Message -->
                <TextView
                    android:id="@+id/validationMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:layout_marginBottom="10dp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="7"
                    android:columnWidth="0dp"
                    android:layout_marginBottom="15dp">

                    <!-- Security Personnel -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Security Personnel:*"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:gravity="center_vertical"
                        android:layout_margin="5dp" />

                    <Spinner
                        android:id="@+id/securityPersonnelSpinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:minHeight="48dp" />

                    <!-- Project -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Project:"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:gravity="center_vertical"
                        android:layout_margin="5dp" />

                    <Spinner
                        android:id="@+id/projectSpinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:minHeight="48dp" />

                    <!-- Shift Date -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shift Date:*"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:gravity="center_vertical"
                        android:layout_margin="5dp" />

                    <DatePicker
                        android:id="@+id/shiftDatePicker"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp" />

                    <!-- Start Time -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Time:*"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:gravity="center_vertical"
                        android:layout_margin="5dp" />

                    <TimePicker
                        android:id="@+id/startTimePicker"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_row="3"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:timePickerMode="spinner" />

                    <!-- End Time -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Time:*"
                        android:layout_row="4"
                        android:layout_column="0"
                        android:gravity="center_vertical"
                        android:layout_margin="5dp" />

                    <TimePicker
                        android:id="@+id/endTimePicker"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_row="4"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:timePickerMode="spinner" />

                    <!-- Hourly Rate -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hourly Rate:*"
                        android:layout_row="5"
                        android:layout_column="0"
                        android:gravity="center_vertical"
                        android:layout_margin="5dp" />

                    <EditText
                        android:id="@+id/hourlyRateEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_row="5"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:hint="0.00"
                        android:inputType="numberDecimal"
                        android:background="@drawable/edittext_background"
                        android:padding="8dp" />

                    <!-- Location -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location:"
                        android:layout_row="6"
                        android:layout_column="0"
                        android:gravity="center_vertical"
                        android:layout_margin="5dp" />

                    <EditText
                        android:id="@+id/locationEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_row="6"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:hint="Main Site"
                        android:background="@drawable/edittext_background"
                        android:padding="8dp" />

                </GridLayout>

                <Button
                    android:id="@+id/createShiftButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Create Shift"
                    android:backgroundTint="#28a745"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Live Shifts Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:cardBackgroundColor="#fff3cd"
            android:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Currently Clocked In"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/refreshButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Refresh"
                        android:backgroundTint="#17a2b8"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/liveShiftsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- All Shifts Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cardBackgroundColor="#f8f9fa"
            android:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="All Security Shifts"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/allShiftsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="200dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>