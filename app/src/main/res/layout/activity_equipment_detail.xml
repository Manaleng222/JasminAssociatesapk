<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".EquipmentDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header with Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Equipment Details"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:backgroundTint="#007ACC"
                android:textColor="@android:color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request"
                android:backgroundTint="#28a745"
                android:textColor="@android:color/white"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Equipment Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="#f8f9fa">

                <!-- Basic Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvEquipmentIcon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:background="#e7f3ff"
                        android:text="ðŸ”§" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="15dp">

                        <TextView
                            android:id="@+id/tvEquipmentName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Equipment Name"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvEquipmentType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Equipment Type"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray" />

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:padding="8dp"
                            android:background="@drawable/status_background" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Details Grid -->
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:stretchColumns="1">

                    <TableRow>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Serial Number"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/darker_gray" />
                        <TextView
                            android:id="@+id/tvSerialNumber"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="SN12345"
                            android:textSize="14sp" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Location"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/darker_gray" />
                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Location"
                            android:textSize="14sp" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Purchase Date"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/darker_gray" />
                        <TextView
                            android:id="@+id/tvPurchaseDate"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Jan 01, 2023"
                            android:textSize="14sp" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Current Value"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/darker_gray" />
                        <TextView
                            android:id="@+id/tvCurrentValue"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="$0.00"
                            android:textSize="14sp" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Hourly Rental Rate"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/darker_gray" />
                        <TextView
                            android:id="@+id/tvRentalRate"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="$0.00/hr"
                            android:textSize="14sp" />
                    </TableRow>

                </TableLayout>

                <!-- Description -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description here"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Maintenance Information -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="#fff3cd"
                    app:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Maintenance Information"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#856404" />

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:stretchColumns="1">

                            <TableRow>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:text="Last Maintenance"
                                    android:textSize="10sp"
                                    android:textColor="#856404" />
                                <TextView
                                    android:id="@+id/tvLastMaintenance"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:text="Jan 01, 2023"
                                    android:textSize="12sp" />
                            </TableRow>

                            <TableRow>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:text="Next Maintenance"
                                    android:textSize="10sp"
                                    android:textColor="#856404" />
                                <TextView
                                    android:id="@+id/tvNextMaintenance"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:text="Jan 01, 2024"
                                    android:textSize="12sp" />
                            </TableRow>

                        </TableLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Current Assignment -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCurrentAssignment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            app:cardBackgroundColor="#e7f3ff"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Assignment"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#007ACC" />

                <TextView
                    android:id="@+id/tvProjectName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Project Name"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvAssignedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Assigned: Jan 01, 2023"
                    android:textSize="10sp"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons for Admin -->
        <LinearLayout
            android:id="@+id/layoutAdminActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:visibility="gone">

            <Button
                android:id="@+id/btnMaintenanceHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Maintenance History"
                android:backgroundTint="#ffc107"
                android:textColor="@android:color/black"
                android:layout_marginEnd="5dp" />

            <Button
                android:id="@+id/btnAssignmentHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Assignment History"
                android:backgroundTint="#17a2b8"
                android:textColor="@android:color/white"
                android:layout_marginStart="5dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>